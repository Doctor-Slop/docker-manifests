server {
    listen 80;
    listen [::]:80;
    server_name linx.li www.linx.li;

    return 301 https://linx.li$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name linx.li www.linx.li;

    # ssl conf
    include /config/nginx/ssl.conf;

    client_max_body_size 100M;

    location / {
        # Proxy to linx container
        fastcgi_pass linx_linx_1:8080;
        include /etc/nginx/fastcgi_params;
    }
}
