server {
    listen 80;
    listen [::]:80;
    server_name soulseek.vtluug.org;

    return 301 https://soulseek.vtluug.org$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name soulseek.vtluug.org;

    # ssl conf
    include /config/nginx/ssl.conf;

    client_max_body_size 100M;

    location / {
        # Proxy to container
        include /config/nginx/proxy.conf;
        proxy_pass http://slskd:5030;
    }
}
